RANLIB ?= ranlib

CC := cc
CXX := c++

# The directory for the build files, may be overridden on make command line.
builddir = .

all: $(builddir)/shc

$(builddir)/shc: $(builddir)/shc_shc.o $(builddir)/shc_shcreader.o
	$(CXX) -o $@ $(LDFLAGS) $(builddir)/shc_shc.o $(builddir)/shc_shcreader.o -L../../vendor/lm-sensors/lib -lsensors -pthread

$(builddir)/shc_shc.o: shc.c
	$(CC) -c -o $@ $(CPPFLAGS) $(CFLAGS) -MD -MP -pthread -I../../vendor/lm-sensors/lib shc.c

$(builddir)/shc_shcreader.o: shcreader.c
	$(CC) -c -o $@ $(CPPFLAGS) $(CFLAGS) -MD -MP -pthread -I../../vendor/lm-sensors/lib shcreader.c

